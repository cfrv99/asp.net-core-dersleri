@model ProfileSettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

<h1>Settings</h1>

<form method="post" asp-action="Settings" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input type="text" asp-for="FullName" class="form-control">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl"></label>
        <input type="file" asp-for="PhotoUrl" class="form-control-file">
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
